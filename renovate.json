{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly", ":automergeMinor"],
  "ignorePresets": ["group:recommended", "group:monorepos"],
  "groupName": "all",
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "manage node upgrades manually",
      "matchPackageNames": ["node", "actions/node-versions"],
      "enabled": false
    },
    {
      "description": "manage ruby upgrades manually",
      "matchPackageNames": ["ruby"],
      "enabled": false
    },
    {
      "description": "limit redis/client until api migration effort",
      "matchPackageNames": ["@redis/client"],
      "allowedVersions": "< 5.0.0"
    }
  ]
}
