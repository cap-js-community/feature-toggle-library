{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly"],
  "ignorePresets": ["group:recommended", "group:monorepos"],
  "groupName": "all",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "manage node upgrades manually",
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "description": "limit ruby to minor upgrades",
      "matchPackageNames": ["ruby"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "limit redis/client until api migration effort",
      "matchPackageNames": ["@redis/client"],
      "allowedVersions": "< 5.0.0"
    },
    {
      "description": "limit eslint until flat config is in place",
      "matchPackageNames": ["eslint"],
      "allowedVersions": "< 9.0.0"
    },
    {
      "description": "limit express until @sap/cds support",
      "matchPackageNames": ["express"],
      "allowedVersions": "< 5.0.0"
    }
  ]
}
